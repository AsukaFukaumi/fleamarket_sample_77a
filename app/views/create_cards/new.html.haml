    .my-page__card
      .my-page__card__user-name
        ももんが さんのマイページ

      .my-page__card__new
        .my-page__card__new__title
          クレジットカード情報入力
        .my-page__card__new__box
          .my-page__card__new__box__format
            .my-page__card__new__box__format__number
              カード番号
              %input#payment_card_no.my-page__card__new__box__format__number__default{"data-input-type" => "card", :maxlength => "19", :placeholder => "半角数字のみ", :type => "text", :value => ""}/
            .my-page__card__new__box__format__group
              %label 有効期限
              %br
              %select#exp_month{name: "exp_month",class: "my-page__card__new__box__format__group__left" ,type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
              %select#exp_year{name: "exp_year",class: "my-page__card__new__box__format__group__right" ,type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
              %br
            .my-page__card__new__box__format__security
              セキュリティコード
              %input#payment_card_no.my-page__card__new__box__format__security__code{"data-input-type" => "card", :maxlength => "19", :placeholder => "カード背面4桁もしくは3桁の番号", :type => "text", :value => ""}/
            .my-page__card__new__box__format__fom
              = link_to 'クレジットカード新規登録', '',class:"my-page__card__new__box__format__fom__btn"