.background
  .category-detail
    = "#{@category.name}の商品一覧"
    
  .pickup
    .group
      .group__lists
        = link_to "products/show" do
          - @products.each do |product|
            .list
              - if product.buyer_id.present? 
                .list--image__sold
                  .list--image__sold__inner
                    SOLD
              %figure.list--image
                - product.images.each do |image|
                  = image_tag image.image.url, class: "item-image"
              .list--detail
                %h3.name
                  = product.name
                .foot
                  %ul
                    %li 
                      = product.amount_of_money
                      円
                    %li
                      %i.fa.fa-star
                        0
                  %p（税込）